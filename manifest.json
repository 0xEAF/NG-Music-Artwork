{
    "manifest_version": 3,
    "name": "NG Music Artwork",
    "version": "1.0",
    "description": "A simple extension that shows the artwork of Newgrounds songs on their listen page, because why is this not already a thing?",
    "permissions": ["storage", "scripting", "activeTab"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "NG Music Artwork Settings",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.newgrounds.com/audio/listen/*",
                "https://newgrounds.com/audio/listen/*"
            ],
            "js": ["content.js"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "ng-music-artwork@xeaf.dev",
            "strict_min_version": "109.0"
        }
    }
}